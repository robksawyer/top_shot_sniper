{
  "manifest_version": 2,
  "name": "Top Shot Sniper",
  "version": "0.0.4",
  "description": "Top Shot Sniper",
  "browser_action": {
    "default_title": "NBA Top Shot Sniper",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "static/icons/icon16.png",
    "48": "static/icons/icon48.png",
    "128": "static/icons/icon128.png"
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nbatopshot.com/listings/p2p/*",
        "http://www.nbatopshot.com/listings/p2p/*",
        "https://recnepsbackwards.github.io/*"
      ],
      "js": ["scripts/content_script.js"]
    }
  ],
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "storage",
    "notifications",
    "declarativeContent",
    "https://www.nbatopshot.com/listings/p2p/*",
    "http://www.nbatopshot.com/listings/p2p/*",
    "https://recnepsbackwards.github.io/*"
  ]
}
